{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  ignoreTests: true,
  automergeType: 'pr',
  automergeStrategy: 'rebase',
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: 'all non-major dependencies',
      groupSlug: 'all-minor-patch',
      ignoreTests: true,
      matchPackageNames: [
        '*',
      ],
    },
  ],
}
