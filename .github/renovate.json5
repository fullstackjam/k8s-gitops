{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchPackageNames": [
        "docker.io/kanidm/server",
        "external-secrets",
        "go",
        "k8s.io/api",
        "k8s.io/apimachinery",
        "k8s.io/client-go",
        "cloudflare/cloudflare",
        "hashicorp/kubernetes",
        "hashicorp/http",
        "gitea"
      ],
      "enabled": false
    }
    ,
    {
      // Disable Renovate updates for the Helm chart "app-template"
      "matchDatasources": ["helm"],
      "matchPackageNames": ["app-template"],
      "enabled": false
    }
  ]
}
